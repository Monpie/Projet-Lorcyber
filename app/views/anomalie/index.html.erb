<% if @current_user %>

<% if Droit.find(@current_user.droit_id).role == "admin" %>
<h1>Page Anomalie</h1>

<p>
  <h2>Créer anomalie</h2>
  <%= form_tag "/anomalie/create", method: :post do %>
      <form>
        <label for="descriptif">Descriptif de l'alerte :</label>
        <br/>
        <textarea type="text" name="descriptif" id="descriptif" rows="5" cols="50"></textarea>
  <br/>
        <input type="submit" value="Valider"/>
      </form>
  <% end %>
</p>
    <h2>Liste anomalies</h2>
  <table class="table table-hover">
    <tr>
      <th>Id</th>
      <th>Statut</th>
      <th>Type</th>
      <th>Descriptif</th>
      <th>Date</th>
    </tr>
    <% @anomalies.each do |anomalie| %>
    <tr>
      <td><%= anomalie.id %></td>
      <td><%= anomalie.statut %></td>
      <td><%= anomalie.alerte_type %></td>
      <td><%= anomalie.descriptif %></td>
      <td><%= anomalie.date %></td>
      <td>
        <% if anomalie.statut == "Incident" %>
        <a href="/plan"><button>Editer plan action</button></a>

        <% else %>
        <a href="/anomalie/show?id=<%=anomalie.id%>">
          <button>edit</button>
        </a>
        <% end %>
      </td>
      <td>
        <a href="/anomalie/delete?id=<%=anomalie.id%>">x</a>
      </td>
    </tr>
    <% end %>

  </table>

  <%= link_to 'Back', welcome_index_path %>
  <%= link_to 'Deconnexion', welcome_deconnexion_url %>
  <% else %>
  <p>Vous n'avez pas les droits pour accéder à cette page</p>
  <%= link_to 'Accueil', welcome_index_path %>
  <%= link_to 'Deconnexion', welcome_deconnexion_url %>
  <% end %>
  <% else %>
  <p>Vous n'êtes pas connecté, veuillez vous connecter</p>
  <%= link_to 'Accueil', welcome_index_path %>
  <% end %>
